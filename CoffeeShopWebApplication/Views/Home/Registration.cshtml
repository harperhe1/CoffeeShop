
@{
    ViewBag.Title = "Registration";
}
<h2>Register</h2>

<link href="~/Content/StyleStuff.css" rel="stylesheet" />
<form action="/Home/AddUser" method="post">
    <label class="control-label">First Name </label>
    <div class="flex-container">
        <input id="firstName" type="text" name="FirstName" class="form-control" onkeyup="ValidateFirstName()" />
        <p id="message"></p>
    </div>
    <label class="control-label">Last Name</label>
    <div class="flex-container">
        <input id="lastName" type="text" name="LastName" class="form-control" onkeyup="ValidateLastName()" />
        <p id="message2"></p>
    </div>
    <label class="control-label">Phone Number</label>
    <div class="flex-container">
        <input id="phoneNumber" type="text" name="PhoneNumber" class="form-control" onkeyup="ValidatePhoneNumber()" />
        <p id="message5"></p>
    </div>

    <label class="control-label">Zip Code</label>
    <div class="flex-container">
        <input id="zipCode" type="text" name="ZipCode" class="form-control" onkeyup="ValidateZipCode()" />
        <p id="message4"></p>
    </div>
    <label class="control-label">Email</label>
    <div class="flex-container">
        <input id="email" type="text" name="EmailAddress" class="form-control" onkeyup="ValidateEmail()" />
        <p id="message3"></p>
    </div>

    <label class="control-label">Password</label>
    <div class="flex-container">
        <input id="password" type="text" name="Password" class="form-control" onkeyup="ValidatePassword(); CheckPassword();" />
        <p id="message6"></p>
    </div>
    <label class="control-label">Confirm Password</label>
    <div class="flex-container">
        <input id="password2" type="text" name="Password2" class="form-control" onkeyup="ValidatePassword(); CheckPassword();" />
        <p id="matchMessage"></p>
    </div>
    <div>
        <input type="radio" name="gender" value="male" checked> Male<br>
        <input type="radio" name="gender" value="female"> Female<br>
        <input type="radio" name="gender" value="other"> Other
    </div>
    <br />
    <br />

    <input type="submit" value="Register!" class="btn-default" />
</form>
<script src="~/Scripts/Validate.js"></script>
<p id="errormessage">@ViewBag.ErrorMessage</p>

